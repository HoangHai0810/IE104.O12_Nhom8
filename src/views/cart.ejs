    <script>
        var coupons = document.querySelectorAll(".coupon");

        coupons.forEach(function (coupon) {
            coupon.addEventListener("click", function () {
                coupons.forEach(function (c) {
                    c.classList.remove("active");
                });

                coupon.classList.add("active");
            });
        });

        function removeProduct(a) {
            let row = document.getElementById(a.id)
            let table = document.getElementById('table-product')
            form = document.getElementById('revProduct'.concat(a.id));
            form.submit();
            table.removeChild(row)
        }

        function updateQuantity(element, change) {
            var quantityInput = element.parentNode.querySelector('#quantity');
            var oldQuantity = parseInt(quantityInput.value);
        
            var newQuantity = oldQuantity + change;
            if (newQuantity < 1) {
                newQuantity = 1; 
            } else if (newQuantity > 10) {
                newQuantity = 10; 
            }
            quantityInput.value = newQuantity;
        
            var price = parseFloat(element.closest('tr').querySelector('.cart-info small').innerText.replace(/[^\d.]/g, ''));

            var newTotal = price  * newQuantity;
            element.closest('tr').querySelector('td:last-child').innerText = newTotal.toLocaleString("en-US") + ' ₫';
        
            calculateTotal();
        }
        
        function calculateTotal() {
            var sum = 0;
            var cartRows = document.querySelectorAll('#table-product .product_cart');
            cartRows.forEach(function (row) {
                var rowTotal = parseFloat(row.querySelector('td:last-child').innerText.replace(/[^\d.]/g, ''));
                sum += rowTotal;
            });
        
            document.querySelector('#table-product tr:last-child td:last-child').innerText = sum.toLocaleString("en-US") + ' ₫';
        }

