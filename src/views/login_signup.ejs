            <script>
                function checkLogin() {
                    var data = JSON.parse(unescape('<%- dataUserF %>'));
                    var checkUserName = false;
                    var userNameLogIn = document.getElementById('userNameLogIn')
                    userNameLogIn.addEventListener('input', () => {
                        userNameLogIn.parentNode.classList.remove('error-border');
                        errorUserName.innerHTML = '';
                    })
                    var userNameLogInValue = userNameLogIn.value;
                    for (let i = 0; i < data.length; i++) {
                        if (userNameLogInValue === data[i].userName) {
                            checkUserName = true;
                        }
                    }
                    if (checkUserName) {
                        var checkPassword = false;
                        var passwordLogIn = document.getElementById('passwordLogIn')
                        passwordLogIn.addEventListener('input', () => {
                            passwordLogIn.parentNode.classList.remove('error-border');
                            errorPassword.innerHTML = '';
                        })
                        var passwordLogInValue = passwordLogIn.value;
                        for (let i = 0; i < data.length; i++) {
                            if (passwordLogInValue === data[i].userPassword) {
                                checkPassword = true;
                            }
                        }
                        if (checkPassword) {
                            for (let m = 0; m < data.length; m++) {
                                if (data[m].userName === userNameLogInValue && data[m].userPassword === passwordLogInValue) {
                                    let form = document.getElementById("loginUser");
                                    let userNamelogin = document.getElementById('userNamelogin');
                                    userNamelogin.value = data[m].userID;
                                    form.submit();
                                }
                            }
                        } else {
                            errorPassword.innerHTML = 'Mật khẩu sai!';
                            errorPassword.style.color = '#e53535';
                            passwordLogIn.parentNode.classList.add('error-border');
                        }
                    } else {
                        errorUserName.innerHTML = 'Tên đăng nhập không tồn tại!';
                        errorUserName.style.color = '#e53535';
                        userNameLogIn.parentNode.classList.add('error-border');
                    }
                }
            </script>

