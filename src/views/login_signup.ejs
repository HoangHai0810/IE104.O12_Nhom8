                <script>
                    function checkPassword1(password) {
                        // Kiểm tra độ dài tối thiểu 8 kí tự
                        if (password.length < 8) {
                            return false;
                        }
                        return true;
                    }

                    function checkPassword2(password) {
                        // Kiểm tra kí tự đặc biệt
                        var specialChars = /[!@#$%^&*(),.?":{}|<>`~;']/;
                        if (!specialChars.test(password)) {
                            return false;
                        }
                        return true;
                    }

                    function checkPassword3(password) {
                        // Kiểm tra kí tự in hoa
                        var uppercaseChars = /[A-Z]/;
                        if (!uppercaseChars.test(password)) {
                            return false;
                        }
                        return true;
                    }

                    function checkPassword4(password) {
                        var numberChars = /[0-9]/;
                        if (!numberChars.test(password)) {
                            return false;
                        }
                        return true;
                    }
                    var data = JSON.parse(unescape('<%- dataUserF %>'));
                    var userNameCheck = false;
                    var checkCfPassword = false;
                    var checkUserNameInput = document.getElementById("userName");
                    checkUserNameInput.addEventListener('input', () => {
                        var userNameInput = document.getElementById("userName").value;
                        var userNameInfo = document.getElementById('userNameInfo');
                        if (checkPassword2(userNameInput)) {
                            userNameInfo.innerHTML = 'Tên đăng nhập có chứa kí tự đặc biệt!!!';
                            userNameInfo.style.color = '#e53535';
                            userNameCheck = false;
                        } else {
                            if (userNameInput.length < 6) {
                                userNameInfo.innerHTML = 'Tên đăng nhập dưới 6 kí tự';
                                userNameInfo.style.color = '#e53535';
                                userNameCheck = false;
                            } else {
                                userNameCheck = true;
                                userNameInfo.style.color = '#08e104';

                                for (let i = 0; i < data.length; i++) {
                                    if (data[i].userName === userNameInput) {
                                        userNameInfo.innerHTML = 'Tên đăng nhập đã tồn tại!';
                                        userNameInfo.style.color = '#e53535';
                                        userNameCheck = false;
                                        break;
                                    }
                                }
                                if (userNameCheck)
                                {
                                    userNameInfo.innerHTML = 'Tên đăng nhập hợp lệ';
                                    userNameInfo.style.color = '#08e104';
                                }
                            }
                        }
                        if (userNameCheck) {
                            checkUserNameInput.parentNode.classList.remove('error-border');
                        }
                    });

                    var checkPasswordInput = document.getElementById("userPassword");
                    checkPasswordInput.addEventListener('input', () => {
                        var passwordInput = document.getElementById("userPassword").value;
                        var isValidPassword1 = checkPassword1(passwordInput);
                        var isValidPassword2 = checkPassword2(passwordInput);
                        var isValidPassword3 = checkPassword3(passwordInput);
                        var isValidPassword4 = checkPassword4(passwordInput);

                        if (!isValidPassword1) {
                            passwordInfo.innerHTML = 'Mật khẩu dưới 8 ký tự!!';
                            passwordInfo.style.color = '#e53535';
                        } else if (!isValidPassword2) {
                            passwordInfo.innerHTML = 'Mật khẩu chưa có kí tự đặc biệt!!';
                            passwordInfo.style.color = '#e53535';
                        }
                        else if (!isValidPassword3) {
                            passwordInfo.innerHTML = 'Mật khẩu chưa có kí tự in hoa!!';
                            passwordInfo.style.color = '#e53535';
                        } else if (!isValidPassword4) {
                            passwordInfo.innerHTML = 'Mật khẩu chưa có kí tự số!!';
                            passwordInfo.style.color = '#e53535';
                        } else {
                            passwordInfo.innerHTML = 'Mật khẩu hợp lệ';
                            passwordInfo.style.color = '#08e104';
                        }
                        

                        if (isValidPassword1 && isValidPassword2 && isValidPassword3 && isValidPassword4) {
                            checkPasswordInput.parentNode.classList.remove('error-border');
                        }

                    });
                    var checkRePasswordInput = document.getElementById("rePassword");
                    checkRePasswordInput.addEventListener('input', () => {
                        var passwordInput = document.getElementById("userPassword").value;
                        var rePasswordInput = document.getElementById("rePassword").value;
                        var rePasswordInfo = document.getElementById('rePasswordInfo')

                        if (rePasswordInput != passwordInput)
                        {
                            rePasswordInfo.innerHTML = 'Mật khẩu xác thực chưa đúng!!'
                            rePasswordInfo.style.color = '#e53535';
                            checkCfPassword = false;
                        }
                        else {
                            rePasswordInfo.innerHTML = 'Mật khẩu xác thực hợp lệ!!'
                            rePasswordInfo.style.color = '#08e104';
                            checkCfPassword = true;
                        }
                    })
                    
                    var signUpBtn = document.getElementById('signUpBtn');
                    signUpBtn.addEventListener('click', () => {
                        var passwordInput = document.getElementById("userPassword").value;
                        if (checkPassword1(passwordInput) && checkPassword2(passwordInput) && checkPassword3(passwordInput) && checkPassword4(passwordInput) && userNameCheck && checkCfPassword) {
                            replaceTab();

                        } else {
                            signUpBtn.type = 'button';
                            signUpBtn.style.backgroundColor = "rgb(165, 181, 28)"
                            if (!userNameCheck) {
                                scrollUserName();
                            } else {
                                scrollPasswordName();
                            }
                        }
                    })

                    function scrollPasswordName() {
                        checkPasswordInput.scrollIntoView({
                            behavior: 'smooth',
                            block: 'center'
                        });
                        checkPasswordInput.parentNode.classList.add('error-border');
                    }

                    function scrollUserName() {
                        checkUserNameInput.scrollIntoView({
                            behavior: 'smooth',
                            block: 'center'
                        });
                        checkUserNameInput.parentNode.classList.add('error-border');
                    }

                    function replaceTab() {
                        Swal.fire({
                            title: 'Thành công',
                            text: 'Bạn đã đăng kí thành công tài khoản',
                            icon: 'success',
                            showCancelButton: false,
                            confirmButtonColor: '#3085d6',
                            confirmButtonText: 'OK'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                signupForm =document.getElementById('signupForm')
                                signupForm.submit();
                            }
                        });
                    }
                </script>
